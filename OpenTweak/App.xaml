<Application x:Class="OpenTweak.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:conv="clr-namespace:OpenTweak.Common"
>
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters (centralized in Common/Converters.cs) -->
            <conv:InverseBoolConverter x:Key="InverseBoolConverter" />
            <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <conv:NotNullToVisibilityConverter x:Key="NotNullToVisibilityConverter" />
            <conv:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter" />
            <conv:ViewModeToAppearanceConverter x:Key="ViewModeToAppearanceConverter" />
            <conv:ViewModeToVisibilityConverter x:Key="ViewModeToVisibilityConverter" />
            <conv:SelectionToBrushConverter x:Key="SelectionToBrushConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
