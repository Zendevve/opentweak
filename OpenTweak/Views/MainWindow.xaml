<ui:FluentWindow x:Class="OpenTweak.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:OpenTweak.ViewModels"
        mc:Ignorable="d"
        Title="OpenTweak"
        Height="720"
        Width="1280"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica">

    <ui:FluentWindow.DataContext>
        <vm:MainViewModel />
    </ui:FluentWindow.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" Title="OpenTweak" Icon="pack://application:,,,/Assets/icon.png">
            <ui:TitleBar.Header>
                <StackPanel Orientation="Horizontal" Margin="12,0">
                    <ui:TextBox
                        PlaceholderText="Search games..."
                        Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                        Width="250"
                        Margin="0,0,12,0"/>
                    <ui:Button
                        Content="Scan for Games"
                        Icon="{ui:SymbolIcon Search24}"
                        Command="{Binding ScanForGamesCommand}"
                        IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBoolConverter}}"
                        Appearance="Primary"/>
                </StackPanel>
            </ui:TitleBar.Header>
        </ui:TitleBar>

        <!-- Main Content - Split View -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" MinWidth="280" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Game List Panel -->
            <Border Grid.Column="0"
                    Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Margin="16,8,8,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Your Games"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Margin="16,16,16,8"/>

                    <!-- Games List -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Games}"
                             SelectedItem="{Binding SelectedGame}"
                             Background="Transparent"
                             BorderThickness="0"
                             Margin="8,0,8,8">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="8" Height="64">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="48" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Game Icon -->
                                    <Border Grid.Column="0"
                                            Width="48" Height="48"
                                            CornerRadius="8"
                                            Background="{ui:ThemeResource ControlFillColorDefaultBrush}">
                                        <ui:SymbolIcon Symbol="Games24" FontSize="24"/>
                                    </Border>

                                    <!-- Game Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0">
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="SemiBold"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding LauncherType}"
                                                   FontSize="12"
                                                   Opacity="0.7"/>
                                    </StackPanel>

                                    <!-- Launcher Badge -->
                                    <Border Grid.Column="2"
                                            VerticalAlignment="Center"
                                            Padding="8,4"
                                            CornerRadius="4"
                                            Background="{ui:ThemeResource AccentFillColorDefaultBrush}">
                                        <TextBlock Text="{Binding LauncherType}"
                                                   FontSize="10"
                                                   Foreground="White"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Loading Overlay -->
                    <Border Grid.Row="1"
                            Background="#80000000"
                            Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ui:ProgressRing IsIndeterminate="True" Width="48" Height="48"/>
                            <TextBlock Text="Scanning..." Margin="0,12,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Game Detail Panel -->
            <Border Grid.Column="1"
                    Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Margin="8,8,16,8">
                <Grid>
                    <!-- No Selection State -->
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Visibility="{Binding SelectedGame, Converter={StaticResource NullToVisibilityConverter}}">
                        <ui:SymbolIcon Symbol="Games48" FontSize="64" Opacity="0.3"/>
                        <TextBlock Text="Select a game to view tweaks"
                                   FontSize="16"
                                   Opacity="0.5"
                                   Margin="0,16,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Game Detail Content -->
                    <ContentControl Content="{Binding SelectedGame}"
                                    Visibility="{Binding SelectedGame, Converter={StaticResource NotNullToVisibilityConverter}}">
                        <ContentControl.ContentTemplate>
                            <DataTemplate>
                                <Grid Margin="24">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- Header -->
                                    <StackPanel Grid.Row="0">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="28"
                                                   FontWeight="Bold"/>
                                        <TextBlock Opacity="0.6" Margin="0,4,0,0">
                                            <Run Text="Installed at: "/>
                                            <Run Text="{Binding InstallPath}"/>
                                        </TextBlock>
                                        <Separator Margin="0,16,0,16"/>
                                    </StackPanel>

                                    <!-- Tweaks List Placeholder -->
                                    <Border Grid.Row="1"
                                            Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                                            CornerRadius="8"
                                            Padding="16">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock Text="Available Tweaks"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="Click 'Fetch Tweaks' to load from PCGW"
                                                       Opacity="0.6"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,8,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Action Buttons -->
                                    <StackPanel Grid.Row="2"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                Margin="0,16,0,0">
                                        <ui:Button Content="Fetch Tweaks"
                                                   Icon="{ui:SymbolIcon ArrowDownload24}"
                                                   Margin="0,0,8,0"/>
                                        <ui:Button Content="Preview Changes"
                                                   Icon="{ui:SymbolIcon Eye24}"
                                                   Margin="0,0,8,0"/>
                                        <ui:Button Content="Optimize"
                                                   Icon="{ui:SymbolIcon Rocket24}"
                                                   Appearance="Primary"
                                                   FontSize="16"
                                                   Padding="24,12"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ContentControl.ContentTemplate>
                    </ContentControl>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="{ui:ThemeResource CardBackgroundFillColorSecondaryBrush}"
                Padding="16,8">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}"
                           VerticalAlignment="Center"
                           Opacity="0.8"/>
                <TextBlock Text="OpenTweak v1.0.0"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Opacity="0.5"/>
            </Grid>
        </Border>
    </Grid>

    <ui:FluentWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </ui:FluentWindow.Resources>
</ui:FluentWindow>
