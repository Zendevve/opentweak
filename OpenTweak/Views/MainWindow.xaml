<ui:FluentWindow x:Class="OpenTweak.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:OpenTweak.ViewModels"
        xmlns:models="clr-namespace:OpenTweak.Models"
        xmlns:views="clr-namespace:OpenTweak.Views"
        mc:Ignorable="d"
        Title="OpenTweak"
        Height="720"
        Width="1280"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica">

    <!-- DataContext is set in code-behind via DI -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" Title="OpenTweak" Icon="pack://application:,,,/Assets/icon.png">
            <ui:TitleBar.Header>
                <StackPanel Orientation="Horizontal" Margin="12,0">
                    <ui:TextBox
                        PlaceholderText="Search games..."
                        Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                        Width="250"
                        Margin="0,0,12,0"/>
                    <ui:Button
                        Content="Scan for Games"
                        Icon="{ui:SymbolIcon Search24}"
                        Command="{Binding ScanForGamesCommand}"
                        IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBoolConverter}}"
                        Appearance="Primary"/>
                </StackPanel>
            </ui:TitleBar.Header>
        </ui:TitleBar>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <!-- Games Panel -->
            <Border Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Margin="16,8,16,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Header with View Toggle -->
                    <Grid Grid.Row="0" Margin="16,16,16,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Your Games"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>

                        <!-- View Toggle Buttons -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <ui:Button Command="{Binding SetListViewCommand}"
                                       Appearance="{Binding CurrentViewMode, Converter={StaticResource ViewModeToAppearanceConverter}, ConverterParameter=List}"
                                       Margin="0,0,4,0"
                                       Padding="8,6">
                                <ui:SymbolIcon Symbol="List24" FontSize="16"/>
                            </ui:Button>
                            <ui:Button Command="{Binding SetGridViewCommand}"
                                       Appearance="{Binding CurrentViewMode, Converter={StaticResource ViewModeToAppearanceConverter}, ConverterParameter=Grid}"
                                       Padding="8,6">
                                <ui:SymbolIcon Symbol="Grid24" FontSize="16"/>
                            </ui:Button>
                        </StackPanel>
                    </Grid>

                    <!-- List View -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Games}"
                             SelectedItem="{Binding SelectedGame}"
                             Background="Transparent"
                             BorderThickness="0"
                             Margin="8,0,8,8"
                             Visibility="{Binding CurrentViewMode, Converter={StaticResource ViewModeToVisibilityConverter}, ConverterParameter=List}">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:Game}">
                                <Grid Margin="8" Height="64">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="48" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Game Icon -->
                                    <Border Grid.Column="0"
                                            Width="48" Height="48"
                                            CornerRadius="8"
                                            Background="{ui:ThemeResource ControlFillColorDefaultBrush}">
                                        <Grid>
                                            <Image Source="{Binding CoverImagePath}"
                                                   Stretch="UniformToFill"
                                                   Visibility="{Binding CoverImagePath, Converter={StaticResource NotNullToVisibilityConverter}}"/>
                                            <ui:SymbolIcon Symbol="Games24" FontSize="24"
                                                           Visibility="{Binding CoverImagePath, Converter={StaticResource NullToVisibilityConverter}}"/>
                                        </Grid>
                                    </Border>

                                    <!-- Game Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0">
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="SemiBold"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding LauncherType}"
                                                   FontSize="12"
                                                   Opacity="0.7"/>
                                    </StackPanel>

                                    <!-- Launcher Badge -->
                                    <Border Grid.Column="2"
                                            VerticalAlignment="Center"
                                            Padding="8,4"
                                            CornerRadius="4"
                                            Background="{ui:ThemeResource AccentFillColorDefaultBrush}">
                                        <TextBlock Text="{Binding LauncherType}"
                                                   FontSize="10"
                                                   Foreground="White"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <EventSetter Event="MouseDoubleClick" Handler="OnGameDoubleClick"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <!-- Grid View -->
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Margin="8,0,8,8"
                                  Visibility="{Binding CurrentViewMode, Converter={StaticResource ViewModeToVisibilityConverter}, ConverterParameter=Grid}">
                        <ItemsControl ItemsSource="{Binding Games}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"
                                               ItemWidth="200"
                                               ItemHeight="280"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:Game}">
                                    <Border Margin="8"
                                            Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                                            CornerRadius="12"
                                            BorderThickness="2"
                                            BorderBrush="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}, Converter={StaticResource SelectionToBrushConverter}}"
                                            MouseLeftButtonUp="OnGameCardClick">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Opacity" Value="1"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Opacity" Value="0.9"/>
                                                        <Setter Property="Background" Value="{ui:ThemeResource ControlFillColorSecondaryBrush}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <!-- Cover Image -->
                                            <Border Grid.Row="0"
                                                    CornerRadius="12,12,0,0"
                                                    ClipToBounds="True"
                                                    Background="{ui:ThemeResource ControlFillColorSecondaryBrush}">
                                                <Grid>
                                                    <Image Source="{Binding CoverImagePath}"
                                                           Stretch="UniformToFill"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding CoverImagePath}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                    <Grid>
                                                        <Grid.Style>
                                                            <Style TargetType="Grid">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding CoverImagePath}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Grid.Style>
                                                        <ui:SymbolIcon Symbol="Games48" FontSize="48" Opacity="0.5"/>
                                                    </Grid>
                                                </Grid>
                                            </Border>

                                            <!-- Game Info -->
                                            <StackPanel Grid.Row="1" Margin="12,8,12,12">
                                                <TextBlock Text="{Binding Name}"
                                                           FontWeight="SemiBold"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <ui:Badge Content="{Binding LauncherType}"
                                                          Appearance="Primary"
                                                          Margin="0,4,0,0"
                                                          HorizontalAlignment="Left"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty State -->
                    <StackPanel Grid.Row="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Visibility="{Binding Games.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                        <ui:SymbolIcon Symbol="Games48" FontSize="64" Opacity="0.3"/>
                        <TextBlock Text="No games found"
                                   FontSize="16"
                                   Opacity="0.5"
                                   Margin="0,16,0,0"
                                   HorizontalAlignment="Center"/>
                        <ui:Button Content="Scan for Games"
                                   Command="{Binding ScanForGamesCommand}"
                                   Appearance="Primary"
                                   Margin="0,16,0,0"/>
                    </StackPanel>

                    <!-- Loading Overlay -->
                    <Border Grid.Row="1"
                            Background="#80000000"
                            Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ui:ProgressRing IsIndeterminate="True" Width="48" Height="48"/>
                            <TextBlock Text="Scanning..." Margin="0,12,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Slide-Over Panel -->
            <Border x:Name="SlideOverPanel"
                    Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1,0,0,0"
                    Width="500"
                    HorizontalAlignment="Right"
                    Margin="0,8,0,8"
                    CornerRadius="8,0,0,8"
                    Panel.ZIndex="100">
                <Border.RenderTransform>
                    <TranslateTransform X="520"/>
                </Border.RenderTransform>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Close Button -->
                    <Button Grid.Row="0"
                            Command="{Binding CloseSlideOverCommand}"
                            HorizontalAlignment="Right"
                            Margin="8"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <ui:SymbolIcon Symbol="Dismiss24" FontSize="16"/>
                    </Button>

                    <!-- Game Detail Content -->
                    <views:GameDetailView Grid.Row="1"
                                          DataContext="{Binding GameDetailViewModel}"
                                          Visibility="{Binding GameDetailViewModel, Converter={StaticResource NotNullToVisibilityConverter}}"/>
                </Grid>
            </Border>

            <!-- Slide-Over Backdrop -->
            <Border x:Name="SlideOverBackdrop"
                    Background="#80000000"
                    Visibility="Collapsed"
                    Panel.ZIndex="99"
                    MouseLeftButtonUp="OnBackdropClick"/>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="{ui:ThemeResource CardBackgroundFillColorSecondaryBrush}"
                Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           VerticalAlignment="Center"
                           Opacity="0.8"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- Community Build Warning -->
                    <Border Background="#1AFFA500" CornerRadius="4" Padding="8,2" Margin="0,0,12,0"
                            Visibility="{Binding IsCommunityBuild, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock VerticalAlignment="Center" FontSize="12">
                            <Run Text="⚠️ Community Build -" Foreground="Orange" FontWeight="SemiBold"/>
                            <Hyperlink NavigateUri="https://buymeacoffee.com/opentweak" RequestNavigate="OnHyperlinkNavigate" TextDecorations="None">
                                <Run Text="Support Development (Get Official Build)" Foreground="Orange"/>
                            </Hyperlink>
                        </TextBlock>
                    </Border>

                    <TextBlock Text="{Binding BuildTypeString}"
                               VerticalAlignment="Center"
                               Opacity="0.5"
                               Margin="0,0,8,0"/>

                    <TextBlock Text="{Binding AppVersion, StringFormat='v{0}'}"
                               VerticalAlignment="Center"
                               Opacity="0.5"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

    <ui:FluentWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </ui:FluentWindow.Resources>
</ui:FluentWindow>
